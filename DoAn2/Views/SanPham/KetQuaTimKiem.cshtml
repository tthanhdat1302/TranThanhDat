@model DoAn2.Models.Sach

@{
    ViewBag.Title = "Tìm kiếm";

    var dsSanPham = ViewBag.SanPhams as List<DoAn2.Models.Sach>;
}

<!-- Page Title
        ============================================= -->
<section id="page-title">

    <div class="container clearfix">
        <h1>Kết quả tìm kiếm</h1>
    </div>

</section><!-- #page-title end -->
<!-- Content
        ============================================= -->
<section id="content">

    <div class="content-wrap">
        <form id="frmChonMua" method="post">
            @Html.AntiForgeryToken()
        </form>
        <div class="container clearfix">
            @if (dsSanPham == null)
            {

            }
            else
            {
                <div id="shop" class="shop product-1 clearfix">
                    @foreach (var item in dsSanPham)
                    {
                        <div class="product clearfix">
                            <div class="product-image">
                                <a href="@Url.Action("ChiTiet", "SanPham", new { id = item.SachID })"><img src="~/Images/@item.HinhBia" alt="@item.TenSach" style="height:300px;width:300px"></a>


                                <div class="product-overlay">
                                    <button class="button button-3d button-small nomargin fright"
                                            form="frmChonMua"
                                            formaction="@Url.Action("Them", "GioHang", new { sanPhamID = item.SachID })">
                                        Thêm vào giỏ hàng
                                    </button>
                                </div>
                            </div>
                            <div class="product-desc">
                                <div class="product-title">
                                    <h3>
                                        @Html.ActionLink(item.TenSach, "ChiTiet", "SanPham", new { id = item.SachID }, htmlAttributes: new { @target = "_blank" })
                                    </h3>
                                </div>
                                <div class="product-price">@item.GiaBan.ToString("0,00##VNĐ")</div>
                            </div>
                        </div>

                    }

                </div><!-- #shop end -->
            }
            <!-- Shop
    ============================================= -->


        </div>

    </div>

</section><!-- #content end -->